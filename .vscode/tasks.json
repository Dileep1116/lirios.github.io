{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "bundle",
            "isShellCommand": true,
            "isBuildCommand": true,
            "args": [
                "exec",
                "jekyll",
                "build"
            ],
            "showOutput": "always",
            "echoCommand": true
        },
        {
            "taskName": "serve",
            "command": "bundle",
            "isShellCommand": true,
            "isBackground": true,
            "args": [
                "exec",
                "jekyll",
                "serve"
            ],
            "showOutput": "always",
            "echoCommand": true
        }
    ]
}